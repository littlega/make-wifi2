<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background12p">


    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/header_bg"
        android:scaleType="fitCenter"
        percent:layout_heightPercent="15%">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.67"
                android:src="@mipmap/text_money_choose" />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Header"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginLeftPercent="0%"
        percent:layout_marginTopPercent="4%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <Button
            android:id="@+id/Menu5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:text="10"
            android:onClick="set_amt"
            android:tag="10"
            android:textSize="48sp"
            android:textStyle="bold"
            android:theme="@style/NumberButton" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/Header"
        android:layout_toEndOf="@+id/LinearLayout1"
        android:layout_toRightOf="@+id/LinearLayout1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginTopPercent="4%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/Menu2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:text="20"
            android:onClick="set_amt"
            android:tag="20"
            android:textColorHint="?android:attr/colorActivatedHighlight"
            android:textSize="48sp"
            android:textStyle="bold"
            android:theme="@style/NumberButton" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/Header"
        android:layout_toEndOf="@+id/LinearLayout2"
        android:layout_toRightOf="@+id/LinearLayout2"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginTopPercent="4%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/menu3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:text="30"
            android:onClick="set_amt"
            android:tag="30"
            android:textSize="48sp"
            android:textStyle="bold"
            android:scaleType="fitCenter"
            android:theme="@style/NumberButton" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Header"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginTopPercent="4%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/menu4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:text="40"
            android:onClick="set_amt"
            android:tag="40"
            android:textSize="48sp"
            android:textStyle="bold"
            android:theme="@style/NumberButton" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LinearLayout1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginLeftPercent="0%"
        percent:layout_marginTopPercent="0%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/Menu5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:text="50"
            android:onClick="set_amt"
            android:tag="50"
            android:textSize="48sp"
            android:textStyle="bold"
            android:theme="@style/NumberButton" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/LinearLayout2"
        android:layout_toRightOf="@+id/LinearLayout5"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginTopPercent="0%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/Menu6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:text="60"
            android:onClick="set_amt"
            android:tag="60"
            android:theme="@style/NumberButton"
            android:textSize="48sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/LinearLayout3"
        android:layout_toEndOf="@+id/LinearLayout6"
        android:layout_toRightOf="@+id/LinearLayout6"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginTopPercent="0%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/menu7"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:theme="@style/NumberButton"
            android:text="100"
            android:onClick="set_amt"
            android:tag="100"
            android:textSize="48sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/LinearLayout4"
        android:layout_toEndOf="@+id/LinearLayout3"
        android:layout_toRightOf="@+id/LinearLayout3"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginTopPercent="0%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/menu8"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:theme="@style/NumberButton"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:text="200"
            android:onClick="set_amt"
            android:tag="200"
            android:textSize="48sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LinearLayout5"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        percent:layout_heightPercent="20%"
        percent:layout_marginBottomPercent="0%"
        percent:layout_marginTopPercent="0%"
        percent:layout_widthPercent="25%"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/Menu9"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:scaleType="fitCenter"
            android:text="300"
            android:onClick="set_amt"
            android:tag="300"
            android:theme="@style/NumberButton"
            android:textSize="48sp"
            android:textStyle="bold"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/Footer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/footer_bg"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        percent:layout_heightPercent="10%"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/BackB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".9"
            android:onClick="topup_network"
            android:scaleType="fitCenter"
            android:src="@mipmap/blight_back" />

        <ImageView
            android:id="@+id/BackHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".9"
            android:onClick="top_home"
            android:scaleType="fitCenter"
            percent:srcCompat="@mipmap/blight_home" />

        <ImageView
            android:id="@+id/BackReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".9"
            android:onClick="report_form"
            android:scaleType="fitCenter"
            percent:srcCompat="@mipmap/blight_report" />


    </LinearLayout>


</android.support.percent.PercentRelativeLayout>

