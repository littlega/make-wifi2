<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical">


    <TextView
        android:id="@+id/settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:background="#ffffeb10"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:text="โฆษณา"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <Button
        android:id="@+id/btnSettingsAdsClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="99dp"
        android:onClick="closeMenu"
        android:text="Close" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings_header"
        android:columnCount="2"
        android:rowCount="6"
        android:id="@+id/gridLayout">

        <EditText
            android:id="@+id/ScreenSaver1Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <ImageView
            android:id="@+id/ScreenSaver1"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/ads1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_below="@+id/ScreenSaver1Id"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/ScreenSaver1IdSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="downloadAds"
            android:text="Load" />

        <EditText
            android:id="@+id/ScreenSaver2Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ScreenSaver1"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_row="0"
            android:layout_column="1"
            android:text="" />

        <ImageView
            android:id="@+id/ScreenSaver2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/ads2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_below="@+id/ScreenSaver2Id"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/ScreenSaver2IdSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="downloadAds"
            android:text="Load" />

        <EditText
            android:id="@+id/ScreenSaver3Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ScreenSaver2"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_row="3"
            android:layout_column="0"
            android:text="" />

        <ImageView
            android:id="@+id/ScreenSaver3"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/ads3"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_below="@+id/ScreenSaver3Id"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/ScreenSaver3IdSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:onClick="downloadAds"
            android:text="Load" />

        <EditText
            android:id="@+id/ScreenSaver4Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ScreenSaver2"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_row="3"
            android:layout_column="1"
            android:text="" />

        <ImageView
            android:id="@+id/ScreenSaver4"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/ads2"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_below="@+id/ScreenSaver3Id"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/ScreenSaver4IdSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:onClick="downloadAds"
            android:text="Load" />

    </GridLayout>

</RelativeLayout>